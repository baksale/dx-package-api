{
  "name": "dx-package-api",
  "version": "1.0.1",
  "description": "API to work with salesforce dx packages metadata",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baksale/dx-package-api.git"
  },
  "keywords": [
    "DX",
    "SFDX",
    "Package",
    "API",
    "Salesforce"
  ],
  "author": "baksale",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/baksale/dx-package-api/issues"
  },
  "homepage": "https://github.com/baksale/dx-package-api#readme",
  "devDependencies": {
    "@salesforce/dev-config": "^1.5.0",
    "@types/jest": "^25.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@salesforce/core": "^2.2.0"
  }
}
